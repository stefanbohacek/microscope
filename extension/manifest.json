{
    "name": "Microscope",
    "version": "1.0.0",
    "description": "Get a better look at your elected representatives.",
    "homepage_url": "https://stefanbohacek.com/project/microscope/",
    "manifest_version": 2,
    "minimum_chrome_version": "74",
    "icons": {
        "16": "icons/icon-16.png",
        "32": "icons/icon-32.png",
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png"
    },
    "action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "content_scripts": [{
        "matches": ["https://twitter.com/*"],
        "js": [
            "scripts/content.js"
        ],
        "css": [
            "styles/styles.css"
        ]
    }],
    "web_accessible_resources": [
        "scripts/main.js",
        "scripts/modules/getTwitterUsername.js",
        "scripts/modules/getRepresentativeDetails.js",
        "scripts/modules/getContributors.js",
        "scripts/modules/showDetails.js",
        "data/*.json"
    ]

}
